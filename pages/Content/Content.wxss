/* pages/Content/Content.wxss */
.box {
  widows: 100%;
  height: 100vh;
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center center;
}

.glass {
  display: flex;
  align-items: center;
  justify-content: center;
}

.glass::before {
  backdrop-filter: blur(40rpx);
}

.myaudio {
  width: 80vw;
  height: 80vw;
  position: relative;
}

.myaudio image {
  border-radius: var(--border-radius-circle);
  overflow: hidden;
}

.myaudio image:first-child {
  width: 100%;
  height: 100%;
  animation: loading 20s linear infinite;
  -moz-animation: loading 20s linear infinite;
  -webkit-animation: loading 20s linear infinite;
  -o-animation: loading 20s linear infinite;
  box-shadow: var(--boxshadow-bottom);
}

.myaudio image:last-child {
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: #fff;
}

.slider {
  width: 80vw;
}