/**index.wxss**/
/* 骨架屏 */
@import "./index.skeleton.wxss";

/* 轮播图 */
.swiper {
  height: 200rpx;
}

.swiper .swiperitem {
  width: 100%;
  display: flex;
  align-items: center;
}

.swiper .swiperitem text {
  font-size: var(--font-size-lg);
}

.swiperitem image {
  width: var(--img-size-lg);
  height: var(--img-size-lg);
  border-radius: var(--border-radius-circle);
}

/* 推荐歌单 */
.content {
  width: 100%;
  padding-bottom: var(--spacing-col-lg);
}

.musicList {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}

.hotMusic {
  width: calc((100% - 15rpx) / 3);
  min-width: calc((100% - 15rpx) / 3);
  max-width: calc((100% - 15rpx) / 3);
  height: 300rpx;
  margin: 0 5rpx 5rpx 0;
  color: #000;
  padding: 10rpx;
  box-sizing: border-box;
}

.hotMusic image {
  width: 100%;
  min-width: 100%;
  max-width: 100%;
  height: 200rpx;
}

.hotMusic view text {
  margin-top: 5rpx;
}

.rankListitem {
  width: 100%;
  padding: 0 10rpx 10rpx 10rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
}

.rankListitem text {
  line-height: 2;
}

.rankListitem image {
  width: calc((100vw - 15rpx) / 3);
  min-width: calc((100vw - 15rpx) / 3);
  max-width: calc((100vw - 15rpx) / 3);
  height: calc((100vw - 15rpx) / 3);
  margin-right: 30rpx;
}