/**index.wxss**/
/* 导航栏 */
#nav {
  width: 100%;
  height: 135px;
  background: #4747FF;
  top: 0;
  left: 0;
}

/* 轮播图 */
.swiper {
  width: 100%;
  height: 280rpx;
  position: absolute;
  top: -10px;
  /* padding-left: 2%; */
}
.swiper image {
  width: 100%;
  height: 100%;
}
/* dots位置 */
.wx-swiper-dots.wx-swiper-dots-horizontal {
  top: 280rpx;
}

/* 推荐歌单 */
.musicContent {
  width: 98%;
  margin: 10px auto;
}

.musicTitle {
  padding-left: 2.5%;
  margin-bottom: 10px;
}

.hotMusic {
  width: 95%;
  height: 50px;
  line-height: 50px;
  background: #F7F7F7;
  color: #000;
  margin-left: 2.5%;
  margin-right: 2.5%;
  padding-left: 1%;
  padding-right: 1%;
  margin-bottom: 10px;
}

.hotMusic text {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}