/* components/indexlist.wxss */
.musicList {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
}

.hotMusic {
  width: calc((100% - 15rpx) / 3);
  min-width: calc((100% - 15rpx) / 3);
  max-width: calc((100% - 15rpx) / 3);
  height: 300rpx;
  margin: 0 5rpx 5rpx 0;
  color: #000;
  padding: 10rpx;
  box-sizing: border-box;
}

.hotMusic image {
  width: 100%;
  min-width: 100%;
  max-width: 100%;
  height: 200rpx;
}

.hotMusic view text {
  margin-top: 5rpx;
}

.hotMusic view text:first-child {
  font-size: var(--font-size-base);
}

.hotMusic view text:last-child {
  font-size: var(--font-size-sm);
  color: var(--text-color-grey);
}